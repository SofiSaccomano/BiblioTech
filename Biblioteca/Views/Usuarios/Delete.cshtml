@model Biblioteca.Models.Usuario

@{
    ViewData["Title"] = "Delete";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">

            <div class="card shadow-lg border-0" style="background-color:#D6BDB5">
                <div class="card-header text-center border-0" style="background-color:#741717">
                    <h1 class="mb-0 text-light">Excluir Livro</h1>
                </div>

                <div class="card-body" id="corLetra">
                    <h3 class="text-center mb-4">Tem certeza que deseja <strong>excluir</strong> este livro?</h3>

                    <dl class="row">
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.NomeCompleto)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.NomeCompleto)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.CPF)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.CPF)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.Celular)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Celular)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.DataNascimento)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.DataNascimento)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.UrlFoto)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.UrlFoto)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.AppUserId)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.AppUserId)
                        </dd>
                    </dl>

                    <div class="card-footer bg-transparent d-flex justify-content-between">
                        <form asp-action="Delete" method="post" class="mb-0">
                            <input type="hidden" asp-for="UsuarioId" />
                            <button type="submit" class="btn btn-lg text-light" style="background-color:#52130C">
                                <i class="bi bi-trash3"></i> Excluir
                            </button>
                        </form>
                        <a asp-action="Index" class="btn btn-lg text-light" style="background-color:#52130C">
                            <i class="bi bi-arrow-left"></i> Voltar
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
