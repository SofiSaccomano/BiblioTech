@model IEnumerable<Biblioteca.Models.Reserva>
@{
    ViewData["Title"] = "Minhas Reservas";
    string searchTerm = ViewBag.SearchTerm as string ?? "";
}

<div class="row">
    <div class="col-1 col-md-2 col-lg-2"></div>
    <div id="divMinhasRetiradas" class="col-10 col-md-8 col-lg-8 bg-black text-light m-lg-5 mb-3 p-5">
        <h1 class="text-center mb-5">Minhas Reservas</h1>

        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success">@TempData["SuccessMessage"]</div>
        }


        <div id="divLocalizarReserva" class="mb-4">
            <form asp-action="Index" method="get" class="mb-3">
                <div class="input-group">
                    <input type="text" name="searchTerm" class="form-control" placeholder="Localizar reserva..." value="@searchTerm" />
                    <button type="submit" class="btn btn-outline-light text-light" style="background-color:#52130C">
                        <i class="bi bi-search"></i> Localizar
                    </button>
                </div>
            </form>
        </div>
        @Html.AntiForgeryToken()
        <table class="table table-dark table-striped mt-3">
            <thead>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.Livro.Titulo)</th>
                    <th>@Html.DisplayNameFor(model => model.DataReserva)</th>
                    <th>@Html.DisplayNameFor(model => model.LivroRetirado)</th>
                    <th></th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr id="reserva-@item.ReservaId">
                        <td>@item.Livro?.Titulo</td>
                        <td>@item.DataReserva.ToString("dd/MM/yyyy")</td>
                        <td>@(item.LivroRetirado ? "Sim" : "Não")</td>
                        <td></td>
                        <td>
                            @if (!item.Cancelada && !item.LivroRetirado)
                            {
                                <form asp-action="Cancelar" asp-controller="Reservas" method="post" style="display:inline;">
                                    <input type="hidden" name="id" value="@item.ReservaId" />
                                    @Html.AntiForgeryToken()
                                    <button type="submit" class="btn btn-light text-light p-2 btn-sm w-50" style="background-color:#52130C">
                                        Cancelar
                                    </button>
                                </form>

                            }
                        </td>


                    </tr>
                }

            </tbody>
        </table>
    </div>
    <div class="col-1 col-md-2 col-lg-2"></div>
</div>