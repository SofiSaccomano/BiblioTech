@model Biblioteca.Models.Avaliacao

@{
    ViewData["Title"] = "Editar avaliação de livro";
}

<div class="row">
    <div class="col-1 col-md-2 col-lg-2"></div>
    <div class="col-10 col-md-8 col-lg-8">
        <div id="divLivro" class="tabela-reservas text-dark m-lg-5 p-5">
            <h1 class="text-center mb-3">Editar Avaliação</h1>
            <form asp-action="Edit" enctype="multipart/form-data" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="AvaliacaoId" />
                <div class="form-group">
                    <label asp-for="Nota" class="control-label"></label>
                    <div class="rating" style="position: relative;">
                        @for (int i = 5; i >= 1; i--)
                        {
                            <input type="radio" id="star-@i" name="Nota" value="@i" @(Model.Nota == i ? "checked" : "") />
                            <label for="star-@i">&#9733;</label>
                        }
                    </div>
                    <span asp-validation-for="Nota" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Comentario" class="control-label"></label>
                    <input asp-for="Comentario" class="form-control" />
                    <span asp-validation-for="Comentario" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="DataAvaliacao" class="control-label"></label>
                    <input asp-for="DataAvaliacao" class="form-control" readonly />
                    <span asp-validation-for="DataAvaliacao" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="LivroId" class="control-label"></label>
                    <select asp-for="LivroId" class="form-control" asp-items="ViewBag.LivroId"></select>
                    <span asp-validation-for="LivroId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label>Usuário</label>
                    <input class="form-control" value="@Model.Usuario?.NomeCompleto" readonly />
                </div>

                <div class="row gap-3 mb-3">
                    <div class="col">
                        <div class="form-group d-flex justify-content-between pt-4">
                            <button asp-action="Index" class="btn btn-sm btn-outline-light fs-6" style="background-color:#52130C"><i class="bi bi-arrow-left"></i> Voltar</button>
                            <button type="submit" id="btnSalvar" class="btn btn-sm btn-outline-light fs-6 " style="background-color:#52130C">
                                <i class="bi bi-floppy"></i> Salvar
                            </button>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
