@model Biblioteca.Models.Avaliacao

@{
    ViewData["Title"] = "Excluir";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">

            <div class="card shadow-lg border-0" style="background-color:#D6BDB5">
                <div class="card-header text-center border-0" style="background-color:#741717">
                    <h1 class="mb-0 text-light">Excluir Livro</h1>
                </div>

                <div class="card-body" id="corLetra">
                    <h3 class="text-center mb-4">Tem certeza que deseja <strong>excluir</strong> este livro?</h3>
                    <dl class="row">
                        <dt class="col-sm-2">Nota</dt>
                        <dd class="col-sm-10">
                            @for (int i = 1; i <= 5; i++)
                            {
                                if (i <= Model.Nota)
                                {
                                    <span style="color: gold; font-size: 1.5em;">&#9733;</span>
                                }
                                else
                                {
                                    <span style="color: #444; font-size: 1.5em;">&#9733;</span>
                                }
                            }
                        </dd>

                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.Comentario)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Comentario)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.DataAvaliacao)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.DataAvaliacao)
                        </dd>

                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.Livro)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Livro.Titulo)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.Usuario)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Usuario.NomeCompleto)
                        </dd>
                    </dl>
                </div>

                <div class="card-footer bg-transparent d-flex justify-content-between">
                    <form asp-action="Delete" method="post" class="mb-0">
                        <input type="hidden" asp-for="AvaliacaoId" />
                        <button type="submit" class="btn btn-lg text-light" style="background-color:#52130C">
                            <i class="bi bi-trash3"></i> Excluir
                        </button>
                    </form>
                    <a asp-action="Index" class="btn btn-lg text-light" style="background-color:#52130C">
                        <i class="bi bi-arrow-left"></i> Voltar
                    </a>

                </div>
            </div>
        </div>
    </div>
</div>